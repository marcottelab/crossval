<% content_for :head do -%>
  <%= javascript_include_tag :defaults %>
<% end -%>

<h1>Editing <%= @experiment.class.to_s.titleize %></h1>

<% form_for([@matrix, @experiment]) do |f| %>
  <%= render :partial => "#{@experiment.class.to_s.tableize}/form", :locals => { :f => f } %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [@matrix, @experiment] %> |
<%= link_to 'Back', matrices_path %>
