<h1>Edit Gene List for Phenotype</h1>

<% form_for([@matrix, @phenotype], :url => { :action => "update_observations" }, :html => {:class => "edit_observations", :id => "edit_observations_#{@phenotype.id}"}) do |f| %>
  <%= render :partial => "observations_form", :locals => { :f => f, :matrix => @matrix } %>
  <div style="float: left; clear: both; padding-left: 9.5em;">
    <%= f.submit 'Update' %>
  </div>
<% end %>

<p style="float:left;clear:both;font-size:large;"><%= link_to 'Back', matrix_phenotype_path(@matrix, @phenotype) %></p>
