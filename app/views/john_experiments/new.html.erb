<% content_for :head do -%>
  <%= javascript_include_tag :defaults %>
<% end -%>

<h1>New <%= @experiment.class.to_s.titleize %></h1>

<% form_for([@matrix, @experiment]) do |f| %>
  <%= render :partial => "#{@experiment.class.to_s.tableize}/form", :locals => { :f => f } %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', matrix_path(@matrix) %>
