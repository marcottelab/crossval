<% content_for :head %>
  <%= javascript_include_tag :defaults %>
<% end %>

<h1>New roc_group</h1>

<% form_for(@roc_group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <div id="items">
    <%= render :partial => 'item', :collection => @roc_group.items, :locals => { :f => f } %>
  </div>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', roc_groups_path %>